---
import Svg from "@c/Svg.astro";
---

<div id="address" class="browsertop">
    <Svg title="Back" name="arrow" id="back" class="navbutton"/>
    <Svg title="Forward" style="transform: rotate(180deg);" name="arrow" id="forward" class="navbutton"/>
    <form class="search" id="search">
        <input id="url" spellcheck="false" autocomplete="off" autocapitalize="off" type="text" placeholder="Start Searching...">
        <button type="button" id="bookmark-btn" class="bookmark-btn" title="Add bookmark">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
            </svg>
        </button>
    </form>
</div>